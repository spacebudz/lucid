{
  "name": "lucid-cardano",
  "version": "0.1.0",
  "description": "Lucid is a library, which allows you to create Cardano transactions and off-chain code for your Plutus contracts in JavaScript and Node.js.",
  "engines": {
    "node": ">= 16.13 <17"
  },
  "browser": {
    "./custom_modules/cardano-multiplatform-lib-nodejs": false
  },
  "main": "src/main.js",
  "devDependencies": {
    "@types/jest": "~27.0.2",
    "@types/node": "^16.11.21",
    "@typescript-eslint/eslint-plugin": "~5.7.0",
    "@typescript-eslint/parser": "~5.7.0",
    "eslint": "~8.4.1",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-jest": "~25.3.0",
    "jest": "~27.4.4",
    "prettier": "~2.5.1",
    "rimraf": "~3.0.2",
    "ts-jest": "~27.1.1",
    "ts-loader": "^9.2.6",
    "tslib": "~2.3.1",
    "tsutils": "~3.21.0",
    "typedoc": "^0.22.11",
    "typescript": "~4.5.3",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2"
  },
  "scripts": {
    "start": "node --es-module-specifier-resolution=node build/lucid-js/src/index.js",
    "clean": "rimraf coverage build tmp && rm -rf build",
    "prebuild": "./scripts/build.sh && npm run lint",
    "build": "tsc --declaration -p tsconfig.build.json && cp -r custom_modules build/lucid-js",
    "docs": "typedoc src/index.ts",
    "build:watch": "./scripts/build.sh && tsc -w -p tsconfig.build.json",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "author": "Alessandro Konrad",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^3.2.3"
  },
  "volta": {
    "node": "16.13.0"
  }
}
